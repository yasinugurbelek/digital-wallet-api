[mysqld]
# Tüm IP adreslerinden gelen bağlantıları kabul et (Docker ağında iletişim için şart)
bind-address = 0.0.0.0

# Performans Ayarları
max_connections = 500
innodb_buffer_pool_size = 256M

# Karakter Seti
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

[mysql]
default-character-set = utf8mb4